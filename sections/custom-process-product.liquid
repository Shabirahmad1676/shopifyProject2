{%- style -%}
  .custom-process-product {
    margin: 2rem 0;
    padding: 2rem 0;
  }
  
  .custom-process-product__title {
    text-align: center;
    margin-bottom: 2rem;
    font-size: 2rem;
    font-weight: bold;
  }
  
  .custom-process-product__steps {
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }
  
  .custom-process-product__step {
    text-align: center;
  }
  
  .custom-process-product__step-title {
    font-size: 1.5rem;
    font-weight: bold;
    margin-bottom: 1rem;
  }
  
  .custom-process-product__step-image {
    max-width: 400px;
    margin: 0 auto;
  }
  
  .custom-process-product__step-image img {
    width: 100%;
    height: 300px;
    object-fit: cover;
    border-radius: 8px;
  }
  
  .custom-process-product__step-placeholder {
    width: 300px;
    height: 300px;
    background-color: #f5f5f5;
    border: 2px dashed #ccc;
    margin: 0 auto;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 8px;
    color: #999;
  }
  
  @media screen and (min-width: 750px) {
    .custom-process-product__steps {
      flex-direction: row;
      gap: 3rem;
    }
    
    .custom-process-product__step {
      flex: 1;
    }
  }
{%- endstyle -%}

<div class="custom-process-product section-{{ section.id }}-padding">
  <div class="page-width">
    {%- if section.settings.title != blank -%}
      <h2 class="custom-process-product__title">{{ section.settings.title }}</h2>
    {%- endif -%}
    
    <div class="custom-process-product__steps">
      {%- for block in section.blocks -%}
        <div class="custom-process-product__step" {{ block.shopify_attributes }}>
          {%- if block.settings.title != blank -%}
            <h3 class="custom-process-product__step-title">{{ block.settings.title }}</h3>
          {%- endif -%}
          
          {%- if block.settings.image != blank -%}
            <div class="custom-process-product__step-image">
              <img src="{{ block.settings.image | image_url: width: 400 }}" 
                   alt="{{ block.settings.title | escape }}" 
                   width="400" 
                   height="300"
                   loading="lazy">
            </div>
          {%- else -%}
            <div class="custom-process-product__step-placeholder">
              <span>Image placeholder</span>
            </div>
          {%- endif -%}
        </div>
      {%- endfor -%}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Custom Process - Product",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "How Your Custom Piece Is Made"
    },
    {
      "type": "header",
      "content": "Section padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top padding",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom padding",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "process_step",
      "name": "Process Step",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Step Title",
          "default": "Process Step"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Step Image",
          "info": "Upload an image for this process step"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Custom Process - Product",
      "blocks": [
        {
          "type": "process_step",
          "settings": {
            "title": "Part 1: The Sketch / CAD Drawing & Mold"
          }
        },
        {
          "type": "process_step",
          "settings": {
            "title": "Part 2: Manufacturing & Production"
          }
        },
        {
          "type": "process_step",
          "settings": {
            "title": "Part 3: Polish, Inspection & Delivery"
          }
        }
      ]
    }
  ]
}
{% endschema %}