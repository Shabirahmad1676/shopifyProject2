<script>
document.addEventListener('DOMContentLoaded', function() {
  const signupButton = document.getElementById('signupButton');
  const signupForm = document.getElementById('signupForm');
  const emailInput = document.getElementById('emailInput');
  const submitButton = document.getElementById('submitButton');
  const successMessage = document.getElementById('successMessage');
  const newsletterForm = document.querySelector('.newsletter-form');
  const storeAccessButton = document.getElementById('storeAccessButton');
  const passwordModal = document.getElementById('passwordModal');
  const contactUsButton = document.querySelectorAll('.alex-moss-nav-button')[1]; // Second nav button is "CONTACT US"
  const contactModalOverlay = document.getElementById('contactModalOverlay');
  const contactModalClose = document.getElementById('contactModalClose');
  const contactForm = document.querySelector('.contact-form');
  const customInquiryButton = document.querySelectorAll('.alex-moss-nav-button')[0]; // First nav button is "CUSTOM INQUIRY"
  const inquiryModalOverlay = document.getElementById('inquiryModalOverlay');
  const inquiryModalClose = document.getElementById('inquiryModalClose');
  const inquiryForm = document.getElementById('inquiryForm');
  const fileUploadArea = document.getElementById('fileUploadArea');
  const fileInput = document.getElementById('fileInput');
  const filePreviewContainer = document.getElementById('filePreviewContainer');
  const filePreviewList = document.getElementById('filePreviewList');
  const inquirySuccessMessage = document.getElementById('inquirySuccessMessage');

  // Add dotted border initially
  signupButton.classList.add('dotted');

  // Handle store access button click
  storeAccessButton.addEventListener('click', function() {
    passwordModal.open = true;
  });

  // Handle contact us button click
  contactUsButton.addEventListener('click', function(e) {
    e.preventDefault();
    contactModalOverlay.style.display = 'flex';
    document.body.style.overflow = 'hidden'; // Prevent background scrolling
  });

  // Handle contact modal close
  contactModalClose.addEventListener('click', function() {
    contactModalOverlay.style.display = 'none';
    document.body.style.overflow = 'auto'; // Restore scrolling
  });

  // Handle contact modal overlay click (close when clicking outside)
  contactModalOverlay.addEventListener('click', function(e) {
    if (e.target === contactModalOverlay) {
      contactModalOverlay.style.display = 'none';
      document.body.style.overflow = 'auto';
    }
  });

  // Handle contact form submission
  contactForm.addEventListener('submit', function(e) {
    // Let Shopify handle the form submission
    // The form will redirect to a success page or show success message
  });

  // Handle custom inquiry button click
  customInquiryButton.addEventListener('click', function(e) {
    e.preventDefault();
    inquiryModalOverlay.style.display = 'flex';
    document.body.style.overflow = 'hidden';
  });

  // Handle inquiry modal close
  inquiryModalClose.addEventListener('click', function() {
    inquiryModalOverlay.style.display = 'none';
    document.body.style.overflow = 'auto';
  });

  // Handle inquiry modal overlay click (close when clicking outside)
  inquiryModalOverlay.addEventListener('click', function(e) {
    if (e.target === inquiryModalOverlay) {
      inquiryModalOverlay.style.display = 'none';
      document.body.style.overflow = 'auto';
    }
  });

  // Handle inquiry form submission
  inquiryForm.addEventListener('submit', function(e) {
    // Get form data
    const firstName = document.getElementById('inquiryFirstName').value;
    const lastName = document.getElementById('inquiryLastName').value;
    const email = document.getElementById('inquiryEmail').value;
    const phone = document.getElementById('inquiryPhone').value;
    const vision = document.getElementById('inquiryVision').value;
    
    // Validate required fields
    if (!firstName || !lastName || !email || !phone || !vision) {
      e.preventDefault();
      alert('Please fill in all required fields.');
      return;
    }
    
    // Show loading state
    const submitButton = document.getElementById('inquirySubmitButton');
    const originalText = submitButton.textContent;
    submitButton.textContent = 'SUBMITTING...';
    submitButton.disabled = true;
    
    // Create comprehensive note content
    let noteContent = `CUSTOM INQUIRY FROM TEMURA WEBSITE\n`;
    noteContent += `=====================================\n\n`;
    noteContent += `CUSTOMER DETAILS:\n`;
    noteContent += `Name: ${firstName} ${lastName}\n`;
    noteContent += `Email: ${email}\n`;
    noteContent += `Phone: ${phone}\n\n`;
    noteContent += `VISION DESCRIPTION:\n`;
    noteContent += `${vision}\n\n`;
    
    if (uploadedFiles.length > 0) {
      noteContent += `UPLOADED FILES:\n`;
      noteContent += `===============\n`;
      uploadedFiles.forEach((file, index) => {
        noteContent += `File ${index + 1}: ${file.name}\n`;
        noteContent += `Size: ${(file.size / 1024 / 1024).toFixed(2)} MB\n`;
        noteContent += `Type: ${file.type}\n\n`;
      });
    }
    
    noteContent += `SUBMISSION DETAILS:\n`;
    noteContent += `===================\n`;
    noteContent += `Submitted: ${new Date().toLocaleString()}\n`;
    noteContent += `Source: TEMURA Website Password Page\n`;
    noteContent += `Form Type: Custom Inquiry\n\n`;
    noteContent += `Please contact the customer at: ${email}\n`;
    noteContent += `Phone: ${phone}`;
    
    // Update the note field with comprehensive information
    document.getElementById('inquiryVision').value = noteContent;
    
    // Let the form submit naturally to Shopify's customer endpoint
    // The form will redirect to a success page or show success message
  });

  // File upload functionality
  let uploadedFiles = [];

  // Handle file upload area click
  fileUploadArea.addEventListener('click', function() {
    fileInput.click();
  });

  // Handle file input change
  fileInput.addEventListener('change', function(e) {
    handleFiles(e.target.files);
  });

  // Handle drag and drop
  fileUploadArea.addEventListener('dragover', function(e) {
    e.preventDefault();
    fileUploadArea.classList.add('dragover');
  });

  fileUploadArea.addEventListener('dragleave', function(e) {
    e.preventDefault();
    fileUploadArea.classList.remove('dragover');
  });

  fileUploadArea.addEventListener('drop', function(e) {
    e.preventDefault();
    fileUploadArea.classList.remove('dragover');
    handleFiles(e.dataTransfer.files);
  });

  function handleFiles(files) {
    for (let file of files) {
      if (file.type.startsWith('image/')) {
        uploadedFiles.push(file);
        createFilePreview(file);
      }
    }
    updateFileInput();
  }

  function createFilePreview(file) {
    const reader = new FileReader();
    reader.onload = function(e) {
      const previewItem = document.createElement('div');
      previewItem.className = 'file-preview-item';
      previewItem.innerHTML = `
        <img src="${e.target.result}" alt="${file.name}" class="file-preview-image">
        <button type="button" class="file-preview-remove" onclick="removeFile('${file.name}')">&times;</button>
      `;
      filePreviewList.appendChild(previewItem);
      filePreviewContainer.style.display = 'block';
    };
    reader.readAsDataURL(file);
  }

  function removeFile(fileName) {
    uploadedFiles = uploadedFiles.filter(file => file.name !== fileName);
    updateFileInput();
    updateFilePreviews();
  }

  function updateFileInput() {
    const dt = new DataTransfer();
    uploadedFiles.forEach(file => dt.items.add(file));
    fileInput.files = dt.files;
  }

  function updateFilePreviews() {
    filePreviewList.innerHTML = '';
    if (uploadedFiles.length === 0) {
      filePreviewContainer.style.display = 'none';
    } else {
      filePreviewContainer.style.display = 'block';
      uploadedFiles.forEach(file => createFilePreview(file));
    }
  }

  // Make removeFile function globally available
  window.removeFile = removeFile;

  // Handle signup button click
  signupButton.addEventListener('click', function() {
    signupButton.style.display = 'none';
    signupForm.style.display = 'flex';
    emailInput.focus();
  });

  // Handle form submission
  newsletterForm.addEventListener('submit', function(e) {
    e.preventDefault();
    
    const email = emailInput.value.trim();
    
    if (!email || !isValidEmail(email)) {
      alert('Please enter a valid email address');
      return;
    }

    // Show loading state
    submitButton.textContent = 'SUBMITTING...';
    submitButton.disabled = true;

    // Submit the form normally (Shopify will handle it)
    this.submit();
  });

  // Handle Enter key in email input
  emailInput.addEventListener('keypress', function(e) {
    if (e.key === 'Enter') {
      newsletterForm.dispatchEvent(new Event('submit'));
    }
  });

  function isValidEmail(email) {
    const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
    return emailRegex.test(email);
  }

  // Check for form success/error messages in URL parameters
  const urlParams = new URLSearchParams(window.location.search);
  if (urlParams.get('customer_posted') === 'true') {
    // Form was submitted successfully
    signupForm.style.display = 'none';
    successMessage.style.display = 'block';
    
    // Also check if this was an inquiry form submission
    const isInquiryForm = document.querySelector('input[name="customer[tags]"][value="custom-inquiry"]');
    if (isInquiryForm) {
      inquiryForm.style.display = 'none';
      inquirySuccessMessage.style.display = 'block';
    }
    
    // Clean up URL
    window.history.replaceState({}, document.title, window.location.pathname);
    
    // Reset form after delay
    setTimeout(() => {
      signupButton.style.display = 'block';
      signupForm.style.display = 'none';
      successMessage.style.display = 'none';
      emailInput.value = '';
      submitButton.textContent = 'SUBMIT';
      submitButton.disabled = false;
      
      // Reset inquiry form if it was shown
      if (isInquiryForm) {
        inquiryForm.style.display = 'block';
        inquirySuccessMessage.style.display = 'none';
        inquiryForm.reset();
        uploadedFiles = [];
        updateFilePreviews();
      }
    }, 5000);
  }

});
</script>

